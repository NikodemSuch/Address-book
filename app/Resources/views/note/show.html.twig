{% extends 'default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="page-section">
          <h2>Note data</h2>

          {% include 'default/formErrors.html.twig' %}

          <table class="table">
            <tbody>
              <tr>
                <th>Content</th>
                <td>{{ note.content }}</td>
              </tr>
              <tr>
                <th>Datetime</th>
                <td>{{ note.createdOn|date('Y-m-d H:i:s') }}</td>
              </tr>
              <tr>
                <th>Contact</th>
                <td>{{ note.contact }}</td>
              </tr>
            </tbody>
          </table>

          <a class="form-button btn btn-primary btn-lg btn-block" href="{{ path('note_edit', { 'id': note.id }) }}">Edit</a>
          {{ form_start(delete_form) }}
            <button class="form-button btn btn-primary btn-lg btn-block" type="submit">Delete</button>
          {{ form_end(delete_form) }}
          <a href="{{ path('contact_show', { 'id': note.contact.id }) }}">Back to Contact</a>

        </div>
      </div>
    </div>
  </div>

{% endblock %}
