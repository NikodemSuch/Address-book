{% extends 'default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="form-container col-sm-6 col-sm-offset-3">

        <div class="form-header">
          <h2 class="form-title">Contact edit</h2>
        </div>

        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        {% include 'default/formErrors.html.twig' %}

        {{ form_label(edit_form.name) }}
        {{ form_errors(edit_form.name) }}
        {{ form_widget(edit_form.name) }}

        {{ form_label(edit_form.address) }}
        {{ form_errors(edit_form.address) }}
        {{ form_widget(edit_form.address) }}

        {{ form_label(edit_form.phoneNumbers) }}
        {{ form_errors(edit_form.phoneNumbers) }}

        <div id="phoneNumber-fields-list" data-prototype="{{ form_widget(edit_form.phoneNumbers.vars.prototype)|e }}" data-widget-phoneNumbers="{{ '<div class="form-group"></div>'|e }}">
          {% for phoneNumber in edit_form.phoneNumbers %}
            <div class="form-group">
              {{ form_errors(phoneNumber) }}
              {{ form_widget(phoneNumber) }}
            </div>
          {% else %}
            {{ form_widget(edit_form.phoneNumbers) }}
          {% endfor %}
        </div>

        <a href="#" class="form-button btn btn-primary btn-lg btn-block add-another-collection-widget" data-list="#phoneNumber-fields-list">Add another phone number</a>
        <button class="form-button btn btn-primary btn-lg btn-block" type="submit">Save changes</button>

        {{ form_end(edit_form) }}

        <div class="form-footer">
          <p><a href="{{ path('homepage') }}">Back to the list</a></p>
        </div>

      </div>
    </div>
  </div>

{% endblock %}
