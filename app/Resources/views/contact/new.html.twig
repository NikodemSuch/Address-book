{% extends 'default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="form-container col-sm-6 col-sm-offset-3">

        <div class="form-header">
          <h2 class="form-title">Contact creation</h2>
        </div>

        {{ dump(form) }}

        {{ form_start(form) }}
        {{ form_errors(form) }}

        {% include 'default/formErrors.html.twig' %}

        {{ form_label(form.name) }}
        {{ form_errors(form.name) }}
        {{ form_widget(form.name) }}

        {{ form_label(form.address) }}
        {{ form_errors(form.address) }}
        {{ form_widget(form.address) }}

        {{ form_label(form.phoneNumbers) }}
        {{ form_errors(form.phoneNumbers) }}

        <div id="phoneNumber-fields-list" data-prototype="{{ form_widget(form.phoneNumbers.vars.prototype)|e }}" data-widget-phoneNumbers="{{ '<div class="form-group"></div>'|e }}">
          {{ form_widget(form.phoneNumbers) }}
        </div>

        <a href="#" class="form-button btn btn-primary btn-lg btn-block add-another-collection-widget" data-list="#phoneNumber-fields-list">Add another phone number</a>
        <button class="form-button btn btn-primary btn-lg btn-block" type="submit">Create New</button>

        {{ form_end(form) }}

        <div class="form-footer">
          <p><a href="{{ path('homepage') }}">Back to the list</a></p>
        </div>

      </div>
    </div>
  </div>

{% endblock %}
