{% extends "base.html.twig" %}

{% block content %}

  {% block navbar %}
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navigation-bar" aria-expanded="false">
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="navigation-bar">
          <ul class="nav navbar-nav navbar-left">
            <li><a  href="{{ path('homepage') }}">Contacts</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            {% if app.user %}

              {% if app.user.role == 'ROLE_ADMIN' %}
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin panel <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="{{ path('admin_change_password') }}">Change Password</a></li>
                    <li><a href="{{ path('admin_contact_index') }}">View all Contacts</a></li>
                    <li><a href="{{ path('admin_contact_recycle_index') }}">View global recycle bin</a></li>
                  </ul>
                </li>
              {% endif %}

              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ app.user.username }} <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="{{ path('user_settings') }}">Settings</a></li>
                  <li><a href="{{ path('user_change_password') }}">Change Password</a></li>
                  <li><a href="{{ path('logout') }}">Sign out <i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
                </ul>
              </li>

            {% else %}
              <li><a href="{{ path('login') }}">Log in</a></li>
              <li><a href="{{ path('user_registration') }}">Sign up</a></li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>
  {% endblock %}

  {% block page %}
  {% endblock %}

  {% block footer %}
  {% endblock %}

{% endblock %}
